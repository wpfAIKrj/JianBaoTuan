<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
     <style name="loading_dialog" parent="android:style/Theme.Dialog">  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowNoTitle">true</item>   
        <item name="android:windowBackground">@drawable/dialog</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
    </style>
    
  
       <style name="home_textview_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="home_title">
        <item name="android:textColor">@color/wite</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="bt_login_style">
        <item name="android:textColor">@color/wite</item>
        <item name="android:background">@drawable/login_bt</item>
        <item name="android:gravity">center</item>
   		<item name="android:textSize">@dimen/login_bt_big_size</item>
    </style>
    
    <style name="edit_login_style">
         <item name="android:textColor">@color/ed_login_color</item>
         <item name="android:textSize">@dimen/login_bt_smart_size</item>
         <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
      <style name="bt_smart_style">
        <item name="android:textSize">@dimen/login_bt_smart_size</item>
        <item name="android:textColor">@color/wite</item>
    </style>
    
      
      <style name="item_text_style">
          <item name="android:textSize">@dimen/item_text_size</item>
          <item name="android:textColor">@color/ed_login_color</item>
      </style>
      
      
      <style name="detail_title_style">
          <item name="android:textColor">@color/dialog_title_color</item>
          <item name="android:textSize">@dimen/item_text_size</item>
      </style>
	   <style name="detail_info_style">
	          <item name="android:textColor">@color/ed_login_color</item>
	          <item name="android:textSize">@dimen/item_text_size</item>
	          <item name="android:lineSpacingExtra">8dp</item>
	      </style>
	      
	   <style name="my_name_style">
        <item name="android:textColor">@color/wite</item>
   		<item name="android:textSize">@dimen/login_bt_smart_size</item>
    	</style>
    	<style name="my_level_style">
        <item name="android:textColor">@color/wite</item>
   		<item name="android:textSize">@dimen/item_text_size</item>
    	</style>
    	
    	<style name="my_up_style">
        <item name="android:textColor">@color/dialog_title_color</item>
   		<item name="android:textSize">@dimen/item_text_size</item>
    	</style>
    	
    	<style name="my_title_style1">
    	 <item name="android:textColor">@color/ed_login_color</item>
   		<item name="android:textSize">@dimen/login_bt_smart_size</item>
    	</style>
    	<style name="my_title_style2">
    	 <item name="android:textColor">@color/dialog_title_color</item>
   		<item name="android:textSize">@dimen/login_bt_smart_size</item>
    	</style>
    	
    	<style name="my_title_style3">
    	 <item name="android:textColor">@color/number_color</item>
   		<item name="android:textSize">@dimen/login_bt_smart_size</item>
    	</style>
    	
    	   <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="DialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <!-- 全屏幕拉伸 -->
    <style name="w_h_full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 高度和屏幕高度一样 宽度自适应 -->
    <style name="w_wrap_h_full">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 宽度和屏幕宽度一样 高度自适应 -->
    <style name="w_full_h_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 固定自身大小 -->
    <style name="w_wrap_h_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 横向比例分布 -->
    <style name="w_weight_h_full">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0.0dp</item>
    </style>

    <!-- 纵向比例分布 -->
    <style name="h_weight_w_full">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dp</item>
    </style>

    <!-- 横向比例分布 -->
    <style name="w_weight_h_wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0.0dp</item>
    </style>

    <!-- 纵向比例分布 -->
    <style name="h_weight_w_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0.0dp</item>
    </style>
    
    <style name="shadow" parent="w_wrap_h_wrap">
         <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
         <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>
    
    <style name="shadow_w_full" parent="w_full_h_wrap">
         <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
         <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>
    
    <style name="shadow_w_weight" parent="w_weight_h_wrap">
         <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
         <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>
    <style name="shadow_h_weight" parent="h_weight_w_wrap">
         <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
         <item name="android:shadowRadius">3</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>
</resources>
