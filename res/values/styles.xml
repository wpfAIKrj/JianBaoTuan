<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" >
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="text_style">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/login_bt_big_size</item>
       <item name="android:animationDuration">5000</item>
      
    </style>
       <style name="home_textview_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="home_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="bt_login_style">
        <item name="android:textColor">@color/wite</item>
        <item name="android:background">@drawable/login_bt</item>
        <item name="android:gravity">center</item>
   		<item name="android:textSize">@dimen/login_bt_big_size</item>
    </style>
    
    <style name="edit_login_style">
         <item name="android:textColor">@color/ed_login_color</item>
         <item name="android:textSize">@dimen/login_bt_smart_size</item>
         <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
      <style name="bt_smart_style">
        <item name="android:textSize">@dimen/login_bt_smart_size</item>
        <item name="android:textColor">@color/wite</item>
    </style>
    
      
</resources>
