<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.yingluo.Appraiser"
    android:id="@+id/layout_treasurs"
    android:layout_width="@dimen/x340"
    android:layout_height="wrap_content"
    android:background="@drawable/item_big_stroke"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageview_big_icon"
        android:layout_width="@dimen/x340"
        android:layout_height="@dimen/y348"
        android:layout_marginLeft="@dimen/x1"
        android:layout_marginRight="@dimen/x1"
        android:layout_marginTop="@dimen/y1"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y20"
        android:orientation="horizontal" >

        <com.yingluo.Appraiser.view.CircleImageView
            android:id="@+id/imageview_small_icon"
            android:layout_width="@dimen/x82"
            android:layout_height="@dimen/x82"
            app:border_color="@color/cricle_color"
            app:border_width="@dimen/x1" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/imageview_grade"
                android:layout_width="@dimen/x34"
                android:layout_height="@dimen/x34"
                android:layout_gravity="left|bottom"
                android:scaleType="fitXY"
                android:src="@drawable/level01" />

            <TextView
                android:id="@+id/textview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="@color/black_2"
                android:textSize="@dimen/x22" />

            <TextView
                android:id="@+id/textview_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:textColor="@color/number_color"
                android:textSize="@dimen/x14" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>