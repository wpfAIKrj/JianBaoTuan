<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wite"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/layout_head" />

    <EditText
        android:id="@+id/et_name"
        style="@style/my_title_style3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/item_layout_padd"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center_vertical|left"
        android:hint="@string/profile_name"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:paddingLeft="@dimen/x30"
        android:textCursorDrawable="@drawable/color_cursor" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_qq"
        style="@style/my_title_style3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/item_layout_padd"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center_vertical|left"
        android:hint="@string/profile_qq"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:paddingLeft="@dimen/x30"
        android:textCursorDrawable="@drawable/color_cursor" >

        <requestFocus />
    </EditText>

    <com.yingluo.Appraiser.view.EmailAutoCompleteTextView
        android:id="@+id/et_email"
        style="@style/my_title_style3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/item_layout_padd"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center_vertical|left"
        android:hint="@string/profile_email"
        android:imeOptions="actionDone"
        android:inputType="textUri|textMultiLine"
        android:paddingLeft="@dimen/x30"
        android:textCursorDrawable="@drawable/color_cursor" />

    <Button
        android:id="@+id/bt_save"
        style="@style/bt_login_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:layout_marginTop="@dimen/y100"
        android:text="@string/profile_bt_save" />

</LinearLayout>