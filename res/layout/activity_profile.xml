<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wite"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/layout_head" />

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/item_layout_padd">
        <TextView 
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:paddingLeft="@dimen/x30"
            android:text="@string/profile_name"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <EditText
	        android:id="@+id/et_name"
	        style="@style/my_title_style3"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:cursorVisible="true"
	        android:ems="10"
	        android:layout_toRightOf="@+id/tv_name"
	        android:layout_marginLeft="5dp"
	        android:background="@null"
	        android:layout_centerVertical="true"
	        android:imeOptions="actionNext"
	        android:inputType="number"
	        android:textCursorDrawable="@drawable/color_cursor" >
	
	        <requestFocus />
	    </EditText>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/item_layout_padd">
        <TextView 
            android:id="@+id/tv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:paddingLeft="@dimen/x30"
            android:text="@string/profile_qq"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        
        <EditText
	        android:id="@+id/et_qq"
	        style="@style/my_title_style3"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:cursorVisible="true"
	        android:ems="10"
	        android:layout_toRightOf="@+id/tv_qq"
	        android:background="@null"
	        android:layout_centerVertical="true"
	        android:imeOptions="actionNext"
	        android:inputType="text"
	        android:layout_marginLeft="5dp"
	        android:textCursorDrawable="@drawable/color_cursor" >
	
	        <requestFocus />
	    </EditText>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/item_layout_padd">
        <TextView 
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:paddingLeft="@dimen/x30"
            android:text="@string/profile_email"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        
        <com.yingluo.Appraiser.view.EmailAutoCompleteTextView
	        android:id="@+id/et_email"
	        style="@style/my_title_style3"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/y94"
	        android:background="@null"
	        android:cursorVisible="true"
	        android:ems="10"
	        android:layout_toRightOf="@+id/tv_email"
	        android:layout_centerVertical="true"
	        android:imeOptions="actionDone"
	        android:layout_marginLeft="5dp"
	        android:inputType="textUri|textMultiLine"
	        android:textCursorDrawable="@drawable/color_cursor" />
        
    </RelativeLayout>

    

    <Button
        android:id="@+id/bt_save"
        style="@style/bt_login_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:layout_marginTop="@dimen/y100"
        android:text="@string/profile_bt_save" />

</LinearLayout>