<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wite"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/layout_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/item_layout_padd"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30" >

        <TextView
            style="@style/tv_edit_login_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_name" />

        <EditText
            android:id="@+id/et_name"
            style="@style/my_title_style3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:cursorVisible="true"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:textCursorDrawable="@drawable/color_cursor" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/item_layout_padd"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30" >

        <TextView
            style="@style/tv_edit_login_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_qq" />

        <EditText
            android:id="@+id/et_qq"
            style="@style/my_title_style3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:cursorVisible="true"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textCursorDrawable="@drawable/color_cursor" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/item_layout_padd"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30" >

        <TextView
            style="@style/tv_edit_login_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_email" />

        <com.yingluo.Appraiser.view.EmailAutoCompleteTextView
            android:id="@+id/et_email"
            style="@style/my_title_style3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y94"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:cursorVisible="true"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="textUri|textMultiLine"
            android:textCursorDrawable="@drawable/color_cursor" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_save"
        style="@style/bt_login_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:layout_marginTop="@dimen/y100"
        android:text="@string/profile_bt_save" />

</LinearLayout>