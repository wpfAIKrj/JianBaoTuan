<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_big_stroke"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageview_big_icon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:layout_weight="2.5"
        android:scaleType="fitXY"
        android:src="@drawable/test_x3" />

    <LinearLayout
        android:id="@+id/linearlayout_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1.0"
            android:src="@drawable/test_x5" />

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1.0"
            android:src="@drawable/test_x5" />

        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1.0"
            android:src="@drawable/test_x5" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_space_color"
        android:paddingLeft="5dp"
        android:text="帮忙看看橄榄怎么样"
        android:textColor="@color/ed_login_color"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/imageview_small_icon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/test_x6" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1.0"
            android:paddingLeft="5dp" >

            <ImageView
                android:id="@+id/imageview_grade"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="start"
                android:src="@drawable/level01" />

            <TextView
                android:id="@+id/textview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:text="品位人生享受生活" />

            <TextView
                android:id="@+id/textview_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:text="456人浏览" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>