<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wite"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/layout_head" />


        <LinearLayout
                android:id="@+id/layout_right_menu"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/menu_background"
                android:paddingTop="@dimen/y50"
                >
		<RelativeLayout 
		      android:id="@+id/layout_item1"
		      android:descendantFocusability="beforeDescendants"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y94"
              android:gravity="center_vertical"
              android:background="@drawable/login_edit_bg"
              >

		    <TextView
		    
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/ed_login_color"
		            android:layout_alignParentLeft="true"
		           	android:layout_centerVertical="true"
		            android:textSize="@dimen/x28"
		            android:layout_marginLeft="@dimen/x20"
		            android:text="个人资料"
		            />
		
		    <ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:scaleType="centerCrop" 
		        android:background="@drawable/next_bg"
		        android:layout_marginRight="@dimen/x14"/>
		
		  

	</RelativeLayout>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/y1"
		android:background="@color/number_color"
	    />
	<RelativeLayout 
	    android:id="@+id/layout_item2"
		      android:descendantFocusability="beforeDescendants"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y94"
              android:gravity="center_vertical"
              
              android:background="@drawable/login_edit_bg"
              >

		    <TextView
		    
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/ed_login_color"
		            android:layout_alignParentLeft="true"
		           	android:layout_centerVertical="true"
		            android:textSize="@dimen/x28"
		            android:layout_marginLeft="@dimen/x20"
		            android:text="修改密码"
		            
		            />
		
		    <ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:scaleType="centerCrop" 
		        android:background="@drawable/next_bg"
		        android:layout_marginRight="@dimen/x14"/>
		
		

	</RelativeLayout>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/y1"
		android:background="@color/number_color"
	    />
	<RelativeLayout 
	    	android:id="@+id/layout_item3"
		      android:descendantFocusability="beforeDescendants"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y94"
              android:gravity="center_vertical"
     
              android:background="@drawable/login_edit_bg"
              >

		    <TextView
		    
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/ed_login_color"
		            android:layout_alignParentLeft="true"
		           	android:layout_centerVertical="true"
		            android:textSize="@dimen/x28"
		            android:layout_marginLeft="@dimen/x20"
		            android:text="意见反馈"
		            
		            />
		
		    <ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:scaleType="centerCrop" 
		        android:background="@drawable/next_bg"
		        android:layout_marginRight="@dimen/x14"/>
		
		   

	</RelativeLayout>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/y1"
		android:background="@color/number_color"
	    />
	<RelativeLayout 
	   	android:id="@+id/layout_item4"
		      android:descendantFocusability="beforeDescendants"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y94"
              android:gravity="center_vertical"
  
              android:background="@drawable/login_edit_bg"
              >

		    <TextView
		    
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/ed_login_color"
		            android:layout_alignParentLeft="true"
		           	android:layout_centerVertical="true"
		            android:textSize="@dimen/x28"
		            android:layout_marginLeft="@dimen/x20"
		            android:text="检测更新"
		            
		            />
		
		    <ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:scaleType="centerCrop" 
		        android:background="@drawable/next_bg"
		        android:layout_marginRight="@dimen/x14"
		  
		        />
		
		    

	</RelativeLayout>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/y1"
		android:background="@color/number_color"
	    />
	<RelativeLayout 
	    android:id="@+id/layout_item5"
		      android:descendantFocusability="beforeDescendants"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y94"
              android:gravity="center_vertical"
           
              android:background="@drawable/login_edit_bg"
              >

		    <TextView
		    
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/ed_login_color"
		            android:layout_alignParentLeft="true"
		           	android:layout_centerVertical="true"
		            android:textSize="@dimen/x28"
		            android:layout_marginLeft="@dimen/x20"
		            android:text="清楚本地缓存"
		            
		            />
		
		    <ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_centerVertical="true"
		        android:scaleType="centerCrop" 
		        android:background="@drawable/next_bg"
		        android:layout_marginRight="@dimen/x14"
		         android:id="@+id/iv_icon"
		        />
		<TextView
		        android:id="@+id/cache_number"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		    		android:layout_centerVertical="true"
		        android:layout_toLeftOf="@+id/iv_icon"
		        android:text="32.5K" 
		        android:textSize="@dimen/x24"
		        android:textColor="@color/ed_login_color"
		        android:layout_marginRight="@dimen/x12"/>
		 

	</RelativeLayout>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/y1"
		android:background="@color/number_color"
	    />

	<View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
		android:background="@color/number_color"
	    />
	<RelativeLayout 
	      android:id="@+id/layout_item6"
		      android:descendantFocusability="beforeDescendants"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/y94"
              android:gravity="center_vertical"
      		 android:layout_marginTop="@dimen/y100"
              android:background="@drawable/login_edit_bg"
              >

		    <TextView
		    
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="@color/ed_login_color"
		            android:layout_alignParentLeft="true"
		           	android:layout_centerVertical="true"
		            android:textSize="@dimen/x28"
		            android:layout_marginLeft="@dimen/x20"
		            android:text="退出当前账号"
		            
		            />
		

		</RelativeLayout>
		<View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
		android:background="@color/number_color"
	    />
        </LinearLayout>
 
</LinearLayout>