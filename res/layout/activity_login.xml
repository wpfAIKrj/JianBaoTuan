<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        layout="@layout/layout_activity_head" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/include1"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y262"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y94"
            android:background="@drawable/login_edit_bg"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="232dp"
                android:layout_height="@dimen/y94"
                android:layout_toLeftOf="@+id/login_bt_clear"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/x20" >

		        <TextView 
		            style="@style/tv_edit_login_left"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/login_name_hint"
		            />
		        <EditText
			        android:id="@+id/login_edit_name"
			        style="@style/my_title_style3"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:cursorVisible="true"
			        android:ems="11"
			        android:layout_marginLeft="5dp"
			        android:background="@null"
			        android:layout_centerVertical="true"
			        android:imeOptions="actionNext"
			        android:inputType="phone"
                	android:singleLine="true"
			        android:textCursorDrawable="@drawable/color_cursor" >
			        <requestFocus />
			    </EditText>
		        
		    </LinearLayout>

            <ImageView
                android:id="@+id/login_bt_clear"
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="@dimen/button_padd"
                android:layout_alignParentRight="true"
                android:src="@drawable/login_input_arrow" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y94"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/login_edit_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x20"
            android:orientation="horizontal" >

            <TextView 
                style="@style/tv_edit_login_left"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/login_pwd_hint"
	            />
            
            <EditText
                android:id="@+id/login_edit_password"
                style="@style/edit_login_style"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="true"
			    android:layout_marginLeft="5dp"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/login_bt_forgot"
            style="@style/bt_smart_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/login_forgeot" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y10"
            android:background="@color/wite" />

        <Button
            android:id="@+id/login_bt_register"
            style="@style/bt_smart_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/login_register" />
    </LinearLayout>

    <Button
        android:id="@+id/login_bt_login"
        style="@style/bt_login_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y146"
        android:text="登 录" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_above="@+id/linearLayout3"
        android:background="@color/wite" />

</RelativeLayout>