<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.it"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        layout="@layout/layout_activity_head" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/include1"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <com.it.view.CircleImageView
            android:id="@+id/login_user_head"
            android:layout_width="@dimen/user_logo_width"
            android:layout_height="@dimen/user_logo_width"
            android:src="@drawable/user_logo"
            app:border_color="@color/cricle_color"
            app:border_width="1dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginRight="@dimen/layout_padding"
        android:layout_marginTop="23dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:background="@drawable/login_edit_bg"
            android:gravity="center_vertical"
            android:id="@+id/name_layout"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/login_edit_name"
                style="@style/edit_login_style"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.11"
                android:background="@null"
                android:ems="11"
                android:hint="@string/login_name_hint"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:singleLine="true" >

                <requestFocus />
            </EditText>

            <ImageView
                android:id="@+id/login_bt_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
               
                android:src="@drawable/login_input_arrow"
                android:padding="@dimen/button_padd"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_top"
             android:background="@drawable/login_edit_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/login_edit_password"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
             	android:background="@null"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="numberPassword"
                android:singleLine="true"
       			style="@style/edit_login_style"
             
                android:hint="@string/login_pwd_hint" 
          
                >

                <requestFocus />
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/login_bt_forgot"
            style="@style/bt_smart_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/login_forgeot" />
	
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/wite"
            android:layout_marginBottom="5dp"
            />
        <Button
            android:id="@+id/login_bt_register"
            style="@style/bt_smart_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/login_register" />
    </LinearLayout>

    <Button
        android:id="@+id/login_bt_login"
        style="@style/bt_login_style"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginRight="@dimen/layout_padding"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/edit_bt_padding"
        android:text="登 录" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/linearLayout3"

        android:background="@color/wite" />

</RelativeLayout>