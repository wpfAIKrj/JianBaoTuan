<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y271"
        android:layout_marginLeft="@dimen/x70"
        android:layout_marginRight="@dimen/x70"
        android:background="@drawable/shape_dialog"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:text="@string/register_result_succes_title"
            android:textColor="@color/dialog_new_title_color"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp" />
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:background="@color/new_dialog_line"
            />

        <TextView
            android:id="@+id/textView2"
            style="@style/my_title_style1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y56"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/home_head_color"
            android:text="@string/register_result_succes_msg" />
    </LinearLayout>

</LinearLayout>