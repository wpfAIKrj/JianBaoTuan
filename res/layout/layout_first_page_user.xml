<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wite"
    android:orientation="vertical" >

    <include layout="@layout/layout_first_page_user_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ababab"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/btn_identifing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                style="@style/bt_smart_style"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:gravity="center"
                android:text="他的宝物"
                android:textColor="@color/dialog_title_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/bt_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_identified"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                style="@style/bt_smart_style"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:gravity="center"
                android:text="他的鉴定"
                android:textColor="@color/ed_login_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/wite" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/fl_identify"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </FrameLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <include
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                layout="@layout/item_identified" />

            <include
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                layout="@layout/item_identified" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <include
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                layout="@layout/item_identified" />

            <include
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                layout="@layout/item_identified" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>