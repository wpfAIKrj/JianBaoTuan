<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y88"
    android:background="@color/dialog_title_color"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/detail_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:src="@drawable/back_botton" />

    <ImageView
        android:id="@+id/detail_collect"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x20"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x15"
        android:src="@drawable/collect_bg" />

    <ImageView
        android:id="@+id/detail_cancle_collect"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x20"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x15"
        android:src="@drawable/cancle_collect_bg"
        android:visibility="gone" />

</RelativeLayout>