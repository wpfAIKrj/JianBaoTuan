<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical" 
    android:background="@color/dialog_title_color"
    
    >

        <ImageView
            android:id="@+id/detail_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/layout_padding"
            android:src="@drawable/back_botton" />

        <ImageView
            android:id="@+id/detail_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
        	android:layout_centerVertical="true"
        	android:paddingLeft="@dimen/button_padd"
            android:paddingRight="@dimen/layout_padding"
            android:src="@drawable/share" />

        <ImageView
            android:id="@+id/detail_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/detail_share"
            android:layout_toLeftOf="@+id/detail_share"
            android:src="@drawable/collect_bg"
            	android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/button_padd"
           />

        <ImageView
            android:id="@+id/detail_cancle_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/detail_collect"
            android:src="@drawable/cancle_collect_bg"
           	android:paddingLeft="@dimen/layout_padding"
            android:paddingRight="@dimen/button_padd"
            android:visibility="gone"
             />

</RelativeLayout>
