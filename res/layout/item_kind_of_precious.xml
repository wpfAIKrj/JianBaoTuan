<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.yingluo.Appraiser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bt_margintop_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.yingluo.Appraiser.view.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_logo"
            app:border_color="@color/cricle_color"
            app:border_width="1dp" />

        <TextView
            android:id="@+id/tv_precious_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.0"
            android:text="ç±½"
            android:textColor="@color/ed_login_color"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/btn_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/next_bg" />
    </LinearLayout>

</LinearLayout>