<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <!-- 顶部标题栏 -->
    <RelativeLayout
        android:id="@+id/select_pic_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y88"
        android:background="@color/dialog_title_color">
    	  <ImageView
        android:id="@+id/select_pic_title_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/button_padd"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:paddingTop="@dimen/button_padd"
        android:src="@drawable/back_botton" />
    	
    	<TextView
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_centerInParent="true"
    	    android:text="图片"
    	    android:textColor="#FFFFFF"
    	    android:textSize="20sp" />
	</RelativeLayout>
	
    <GridView
	    android:id="@+id/select_pic_gridview"
	    android:layout_width="fill_parent"   
	    android:layout_height="fill_parent"  
	    android:layout_below="@id/select_pic_title_bar"
	    android:numColumns="auto_fit"  
	    android:verticalSpacing="2dp"  
	    android:horizontalSpacing="2dp"  
	    android:columnWidth="90dp"  
	    android:stretchMode="columnWidth"
	    android:gravity="center"
	    android:visibility="visible"
	    android:scrollbars="none" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentBottom="true"
        android:background="@color/wite">
    	<RelativeLayout
    	    android:id="@+id/select_pic_private"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="@dimen/x14"
    	    android:layout_alignParentLeft="true"
    	    android:layout_centerVertical="true"
    	    android:background="@drawable/image_ablum_bt_bg"
    	    
    	     >
    	    <TextView
    	        android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content"
    	  
    	    	android:text="预览"
    	    	android:textColor="@color/wite"
    	    	android:textSize="@dimen/x28" 
    	    	android:layout_centerInParent="true"/>
    	</RelativeLayout>
        
    	<RelativeLayout
    	    android:id="@+id/select_pic_submit"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginRight="@dimen/x20"
    	    android:layout_alignParentRight="true"
    	    android:layout_centerVertical="true"
    	    android:background="@drawable/image_ablum_bt_bg" >
    	    <TextView
    	        android:id="@+id/select_pic_submit_content"
    	        android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content"
    	    	android:layout_centerInParent="true"
    	    	android:text="完成(3)"
    	    	android:textColor="@color/wite"
    	    	android:textSize="@dimen/x24" />
    	</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>
