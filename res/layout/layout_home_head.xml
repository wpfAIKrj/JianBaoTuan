<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal" 
    android:gravity="center_vertical"
    android:background="@color/dialog_title_color"
    
    >

        <TextView
            android:id="@+id/home_title"
            style="@style/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textSize="@dimen/login_bt_big_size"
            android:layout_marginLeft="@dimen/home_layout_ml"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_selected_bg" 
            android:layout_marginLeft="@dimen/home_layout_ml"
            android:layout_marginRight="@dimen/home_layout_mr"
            android:gravity="center_vertical|right">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_selecteiv" 
                android:layout_marginRight="@dimen/home_layout_mr"/>

        </LinearLayout>

</LinearLayout>
