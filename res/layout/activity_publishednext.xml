<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_new_bg"
    android:orientation="vertical"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/layout_head" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x14"
            android:paddingTop="@dimen/y40"
            android:text="宝贝说明"
            android:textColor="@color/ed_login_color"
            android:textSize="@dimen/x32" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y336"
            android:layout_marginTop="@dimen/y30" >

            <EditText
                android:id="@+id/ed_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginRight="@dimen/x14"
                android:background="@drawable/item_layout_padd"
                android:gravity="left"
                android:hint="请尽量说明你的宝贝信息，如何获得时间，价格,途径等"
                android:inputType="textMultiLine"
                android:maxLines="8"
                android:paddingBottom="@dimen/y20"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:paddingTop="@dimen/y20"
                android:singleLine="false"
                android:textColor="@color/new_time_color"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/y20"
                android:layout_marginRight="@dimen/x28"
                android:text="0/200"
                android:textColor="@color/ed_login_color"
                android:textSize="@dimen/x30" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x14"
            android:layout_marginTop="@dimen/y20"
            android:text="选择鉴定师"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/threed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x14"
            android:layout_marginRight="@dimen/x14"
            android:orientation="horizontal" >
           
        </LinearLayout>

        <Button
            android:id="@+id/send_identy"
            android:layout_width="@dimen/x260"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y110"
            android:background="@drawable/identify_bak"
            android:gravity="center"
            android:text="@string/feednack_bt"
            android:textColor="@color/wite"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>