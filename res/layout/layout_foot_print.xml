<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wite"
    android:orientation="vertical" >

    <include layout="@layout/layout_foot_print_head" 
        
        android:id="@+id/top"/>

   <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_above="@+id/bottom"
         >

        <com.yingluo.Appraiser.view.PullRefreshRecyclerView
            android:id="@+id/prrv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y20"
            android:paddingLeft="@dimen/x14"
            android:paddingRight="@dimen/x14" />

        <TextView
            android:id="@+id/tv_none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/str_none_msg"
            android:textColor="@color/black_2"
            android:textSize="15sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_loading"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/loading"
            android:visibility="gone" />
        
        
    </FrameLayout>
<View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/item_space_color" />
</RelativeLayout>