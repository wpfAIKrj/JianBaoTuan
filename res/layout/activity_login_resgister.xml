<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bak"
    android:fitsSystemWindows="true" >

    <include
        android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        layout="@layout/layout_activity_head" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/y216"
        android:src="@drawable/login_logo" />

    <Button
        android:id="@+id/bt_login"
        style="@style/bt_login_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/x75"
        android:layout_marginRight="@dimen/x75"
        android:background="@drawable/logo_btn_bak"
        android:layout_above="@+id/bt_resgister"
        android:layout_marginBottom="@dimen/y30"
        android:text="登 录"
        android:textColor="@color/home_head_color"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/bt_resgister"
        style="@style/bt_login_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/x75"
        android:layout_marginRight="@dimen/x75"
        android:background="@drawable/logo_btn_bak"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y240"
        android:text="注 册"
        android:textColor="@color/home_head_color"
        android:textSize="16sp" />


</RelativeLayout>