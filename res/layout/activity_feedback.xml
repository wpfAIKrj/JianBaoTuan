<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_line_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/layout_head" />

    <EditText
        android:id="@+id/et_context"
        style="@style/my_title_style3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ed_feed_layout_height"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/item_layout_padd"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="left"
        android:hint="@string/feednack_hint"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="@dimen/x20"
        android:textCursorDrawable="@drawable/color_cursor" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/bt_save"
        style="@style/bt_login_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/identify_bak"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:layout_marginTop="@dimen/y100"
        android:text="@string/feednack_bt"
        android:textColor="@color/wite" />

</LinearLayout>