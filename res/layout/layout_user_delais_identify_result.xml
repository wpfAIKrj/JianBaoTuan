<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/y20"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:background="@color/wite"
    >

    <RelativeLayout
        android:id="@+id/float_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y72"
         android:background="@color/wite"
        >

        <TextView
            android:id="@+id/title"
            style="@style/w_wrap_h_wrap"
            android:layout_centerInParent="true"
            android:text="@string/str_identify_result"
            android:textColor="@color/black_2"
            android:textSize="@dimen/x30" />

        <TextView
            android:id="@+id/title_tag"
       		style="@style/w_wrap_h_wrap"
            android:layout_alignBaseline="@+id/title"
            android:layout_alignBottom="@+id/title"
            android:layout_toRightOf="@+id/title"
             android:text="@string/str_identify_result"
            android:textColor="@color/dialog_title_color"
            android:textSize="@dimen/x30"
            android:visibility="gone"
             />

    </RelativeLayout>
  <View 
           
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@drawable/item_layout_padd"
            />
         <ListView
        android:id="@+id/people_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>