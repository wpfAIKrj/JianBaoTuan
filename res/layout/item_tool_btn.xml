<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/y60"
    android:paddingLeft="@dimen/x40"
    android:paddingRight="@dimen/x40"
    android:orientation="horizontal" >

    <TextView 
        android:id="@+id/tv_tool_first"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="星月菩提"
        android:textColor="@color/wite"
        android:background="@drawable/shape_tool_btn_press"
        android:gravity="center"/>
    
    <TextView 
        android:id="@+id/tv_tool_second"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="金刚菩提"
        android:layout_marginLeft="@dimen/x35"
        android:textColor="@color/new_tool_color"
        android:background="@drawable/shape_tool_btn_normal"
        android:gravity="center"/>
    
    <TextView 
        android:id="@+id/tv_tool_thrid"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="小叶紫檀"
        android:layout_marginLeft="@dimen/x35"
        android:textColor="@color/new_tool_color"
        android:background="@drawable/shape_tool_btn_normal"
        android:gravity="center"/>

</LinearLayout>