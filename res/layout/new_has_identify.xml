<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/wite" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120">
        
        <com.yingluo.Appraiser.view.CircleImageView 
            android:id="@+id/tv_home_arrow"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:paddingLeft="@dimen/x20"
            android:layout_centerVertical="true"/>
        
        <TextView 
            android:id="@+id/tv_identifyer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_home_arrow"
            android:layout_marginTop="@dimen/y21"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="16sp"
            android:text="方德磊是浪货"/>
        
        <TextView 
            android:id="@+id/tv_identifyer_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="最坑上单方德磊"
            android:textColor="@color/new_time_color"  
            android:layout_below="@+id/tv_identifyer_name"
            android:layout_alignLeft="@+id/tv_identifyer_name"   
            android:layout_marginTop="@dimen/y4"/>
        
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@color/new_line_color"/>
    
    <TextView 
        android:id="@+id/tv_identifer_say"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x20"
        android:text="上单方德磊，空放大招，千里送人头，传送送人头，回家买鞋快跑送人头"
        android:ellipsize="end"
        android:maxLines="2"/>
    
    <com.yingluo.Appraiser.view.TagLinearLayout
        android:id="@+id/tll_identify_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/y20" />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/new_line_color"/>
    
</LinearLayout>