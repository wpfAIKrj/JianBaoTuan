<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layout_bg_color"
        android:orientation="vertical"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/my_info_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y88"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/my_bt_showmenu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/x30"
                        android:paddingRight="@dimen/x30"
                        android:src="@drawable/my_setbt_bg" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout1" >

                    <com.yingluo.Appraiser.view.CircleImageView
                        android:id="@+id/login_user_head"
                        android:layout_width="@dimen/y168"
                        android:layout_height="@dimen/y168"
                        android:layout_marginTop="@dimen/y2"
                        android:layout_toLeftOf="@+id/view_middle"
                        android:src="@drawable/user_logo"
                        android:layout_marginRight="@dimen/y8"
                        app:border_color="@color/cricle_color"
                        app:border_width="@dimen/x1" />

                    <ProgressBar
                        android:id="@+id/pb_jngyan"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="@dimen/x400"
                        android:layout_height="@dimen/y20"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/y40" 
                        android:layout_below="@+id/login_user_head"
                        android:progress="10"
                        android:progressDrawable="@drawable/progressbar_color"
                        />
                    
                    <TextView 
                        android:id="@+id/tv_jingyan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/pb_jngyan"
                        android:layout_alignBottom="@+id/pb_jngyan"
                        android:textColor="@color/black"
                        android:textSize="7sp"
                        android:text="1/5"
                        android:layout_centerHorizontal="true"
                        />
                    <View 
                        android:id="@+id/view_middle"
                        android:layout_width="1dp"
                        android:layout_height="11dp"
                        android:background="@android:color/transparent"
                        android:layout_centerInParent="true"
                        />
                    <TextView
                        android:id="@+id/my_tv_name"
                        style="@style/my_name_style"
                        android:layout_toRightOf="@+id/view_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y20"
                        android:layout_marginLeft="@dimen/y8"
                        android:text="测试名字" />

                    <TextView
                        android:id="@+id/my_type_msg"
                        style="@style/my_level_style"
                        android:layout_toRightOf="@+id/view_middle"
                        android:layout_below="@+id/my_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y20"
                        android:layout_marginLeft="@dimen/y8"
                        android:text="新手上路" />

                    <TextView
                        android:id="@+id/my_tv_authenticate"
                        style="@style/my_up_style"
                        android:layout_toRightOf="@+id/view_middle"
                        android:layout_below="@+id/my_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y20"
                        android:layout_marginLeft="@dimen/y8"
                        android:visibility="gone"
                        android:text="成为网络鉴定师" />

                    <RelativeLayout
                        android:id="@+id/ll_level"
                        android:layout_width="@dimen/x150"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/my_type_msg"
                        android:layout_alignTop="@+id/my_type_msg"
                        android:layout_alignBottom="@+id/my_type_msg"
                        android:background="@drawable/ed_code_bg" >

                        <TextView
                            android:id="@+id/tv_zhang"
                            style="@style/my_up_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/x8"
                            android:text="成长体系" />

                        <ImageView
                            android:id="@+id/my_iv_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x8"
                            android:layout_toRightOf="@+id/tv_zhang"
                            android:src="@drawable/levelicon01" />
                    </RelativeLayout>
                    
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y100"
                    android:layout_below="@+id/linearLayout1"
                    android:layout_marginTop="@dimen/x30"
                    android:background="@drawable/login_edit_bg"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/my_layout_collect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/my_title_style1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/my_title_collect" />

                        <TextView
                            android:id="@+id/my_tv_collect_number"
                            style="@style/my_title_style2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/x16"
                        android:layout_marginTop="@dimen/x16"
                        android:background="@color/wite" />

                    <LinearLayout
                        android:id="@+id/my_layout_identif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/my_title_style1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/my_title_appraisal" />

                        <TextView
                            android:id="@+id/my_identiy_number"
                            style="@style/my_title_style2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center" />
                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/x16"
                        android:layout_marginTop="@dimen/x16"
                        android:background="@color/wite" />

                    <LinearLayout
                        android:id="@+id/my_layout_foot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/my_title_style1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/my_title_footprint" />

                        <TextView
                            android:id="@+id/my_fooler_number"
                            style="@style/my_title_style2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y500"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/layout_bg_color"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/my_tab1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bt_collect_bg" />

                            <TextView
                                style="@style/my_title_style3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x14"
                                android:text="收藏宝物" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_tab2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bt_info_bg" />

                            <TextView
                                style="@style/my_title_style3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x14"
                                android:text="收藏文章" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_tab3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bt_im_bg" />

                            <TextView
                                style="@style/my_title_style3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x14"
                                android:text="我的私信" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/my_tab4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bt_system_bg" />

                            <TextView
                                style="@style/my_title_style3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x14"
                                android:text="系统通知" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_tab5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bt_make_bg" />

                            <TextView
                                style="@style/my_title_style3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x14"
                                android:text="认证鉴定师" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_tab6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="invisible" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bt_service_bg"
                                android:clickable="false" />

                            <TextView
                                style="@style/my_title_style3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x14"
                                android:text="人工客服" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/wite"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y10"
                        android:layout_marginLeft="@dimen/x36"
                        android:layout_marginTop="@dimen/y10"
                        android:src="@drawable/my_love" />

                    <TextView
                        android:id="@+id/textView4"
                        style="@style/my_title_style1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="猜你喜欢" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/horizontalListView1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y234"
                    android:layout_marginTop="@dimen/y10"
                    android:background="@color/wite" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y30"
                    android:layout_marginTop="@dimen/y20"
                    android:background="@drawable/item_layout_padd" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>