<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:background="@color/home_head_color" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/my_bt_showmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:src="@drawable/my_setbt_bg" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/layout_bg_color"
        android:orientation="vertical"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/my_back"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y40"
                    android:paddingBottom="@dimen/y40" >

             
                  <com.yingluo.Appraiser.view.CircleImageView
                     android:id="@+id/login_user_head"
                     android:layout_width="@dimen/y200"
                     android:layout_height="@dimen/y200"
                     android:layout_marginTop="@dimen/y2"
                     android:layout_centerHorizontal="true"
                     android:src="@drawable/user_logo"
                     app:border_color="@color/cricle_color"
                     app:border_width="@dimen/x1" />

                  <View 
                      android:id="@+id/user_middle"
                      android:layout_width="1dp"
                      android:layout_height="1dp"
                      android:layout_centerHorizontal="true"
                      android:layout_alignBottom="@+id/login_user_head"/>
                  
                 <ImageView
                     android:id="@+id/my_iv_level"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignBottom="@+id/login_user_head"
                     android:layout_toRightOf="@+id/user_middle"
                     android:layout_marginLeft="@dimen/x16"
                     android:src="@drawable/levelicon01" />

                    <TextView
                        android:id="@+id/my_tv_name"
                        style="@style/my_name_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/login_user_head"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/y20"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/my_type_msg"
                        style="@style/my_level_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/my_tv_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/y20" />

                    <ImageView
                        android:id="@+id/iv_my_wen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/my_type_msg"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_toRightOf="@+id/my_type_msg"
                        android:src="@drawable/my_wen" />

                    <com.yingluo.Appraiser.view.SpringProgressView
                        android:id="@+id/pb_jngyan"
                        android:layout_width="@dimen/x300"
                        android:layout_height="@dimen/y16"
                        android:layout_below="@+id/my_type_msg"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/y20" />

                    <TextView
                        android:id="@+id/tv_jingyan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/pb_jngyan"
                        android:layout_alignTop="@+id/pb_jngyan"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-1dp"
                        android:gravity="top"
                        android:textColor="@color/home_head_color"
                        android:textSize="7sp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/new_line_color"
                android:orientation="vertical"
                android:paddingBottom="@dimen/y20" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y20"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/my_layout_collect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bt_good_bg" />

                            <TextView
                                style="@style/my_title_style3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x14"
                                android:text="我的宝物" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_layout_identif"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bt_identify_bg" />

                            <TextView
                                style="@style/my_title_style3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x14"
                                android:text="我鉴定的" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_layout_foot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bt_foot_bg" />

                            <TextView
                                style="@style/my_title_style3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x14"
                                android:text="我的足迹" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y20"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/my_tab1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bt_collect_bg" />

                            <TextView
                                style="@style/my_title_style3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x14"
                                android:text="收藏宝物" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_tab2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bt_info_bg" />

                            <TextView
                                style="@style/my_title_style3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x14"
                                android:text="收藏文章" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_tab3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bt_im_bg" />

                            <TextView
                                style="@style/my_title_style3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x14"
                                android:text="我的私信" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y20"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/my_tab4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bt_system_bg" />

                            <TextView
                                style="@style/my_title_style3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x14"
                                android:text="系统通知" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_tab5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bt_make_bg" />

                            <TextView
                                style="@style/my_title_style3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x14"
                                android:text="认证鉴定师" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/my_tab6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="invisible" >
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/new_line_color"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y58"
                    android:background="@color/wite"
                    android:gravity="center_vertical|left"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="猜你喜欢"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/horizontalListView1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y234"
                    android:layout_marginTop="@dimen/y10" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>