<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y271"
    android:background="@drawable/my_info_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
           
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
          
            android:src="@drawable/back_botton" 
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20" >

        <com.yingluo.Appraiser.view.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/y102"
            android:layout_height="@dimen/y102"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/user_logo"
            app:border_color="@color/cricle_color"
            app:border_width="@dimen/x1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" 
            android:layout_marginTop="@dimen/y16"
            android:layout_marginLeft="@dimen/x15"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品位生活享受生活"
                android:textColor="@color/ed_login_color"
                android:textSize="@dimen/x30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
     			android:layout_marginTop="@dimen/y7"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_grade_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="网络鉴定师"
                    android:textColor="@color/dialog_title_color"
                    android:textSize="@dimen/x24" />

                <ImageView
                    android:id="@+id/iv_grade"
                    android:layout_width="@dimen/y34"
                    android:layout_height="@dimen/y34"
                   	android:layout_marginLeft="@dimen/x10"
                    android:src="@drawable/level01" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_msg"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/bt_color"
            android:gravity="center"
            android:text="私信"
            android:textColor="@color/wite"
            android:textSize="@dimen/x36" />
    </LinearLayout>

</LinearLayout>