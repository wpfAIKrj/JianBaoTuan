<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/include1"
        layout="@layout/layout_activity_head" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y100"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y94"
            android:background="@drawable/login_edit_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x20" >

            <TextView
                style="@style/tv_edit_login_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_name_hint" />

            <EditText
                android:id="@+id/register_edit_phone"
                style="@style/edit_login_style"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="true"
                android:ems="10"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y94"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ed_code_bg"
                android:paddingLeft="@dimen/y20" >

                <TextView
                    style="@style/tv_edit_login_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_code_ed_hint" />

                <EditText
                    android:id="@+id/register_edit_code"
                    style="@style/edit_login_style"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:alpha="10"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:ems="10"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/color_cursor" >
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/register_send_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="1"
                android:background="@drawable/bt_code_bg"
                android:gravity="center"
                android:text="@string/register_code_bt_hint"
                android:textColor="@color/bt_color"
                android:textSize="@dimen/x30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y94"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/login_edit_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/y20" >

            <TextView
                android:id="@+id/tv_register_edit_password"
                style="@style/tv_edit_login_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_pwd_hint" />

            <EditText
                android:id="@+id/register_edit_password"
                style="@style/edit_login_style"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:cursorVisible="true"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y46" >

        <CheckBox
            android:id="@+id/cb_xieyi"
            style="@style/delete_checkbox_all_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="true"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cb_xieyi"
            android:paddingLeft="@dimen/x10"
            android:text="用户协议"
            android:textColor="#ff0000" />
    </RelativeLayout>

    <Button
        android:id="@+id/register_button"
        style="@style/bt_login_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y94"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/y100"
        android:text="@string/regitster_next" />

</LinearLayout>