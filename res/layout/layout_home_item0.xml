<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wite"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/float_head"
        style="@style/w_full_h_wrap"
        android:layout_marginTop="@dimen/y20"
        android:background="@drawable/home_menu_back" >

        <TextView
            android:id="@+id/title"
            style="@style/w_wrap_h_wrap"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/str_good_precious"
            android:textColor="@color/black_2"
            android:textSize="@dimen/x36" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_home_item0"
        style="@style/w_full_h_wrap"
        android:orientation="vertical"
        android:paddingTop="@dimen/y20" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.yingluo.Appraiser.view.home.ViewChoices
                android:id="@+id/choices_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginRight="@dimen/x6"
                android:layout_weight="1" />

            <com.yingluo.Appraiser.view.home.ViewChoices
                android:id="@+id/choices_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginLeft="@dimen/x6"
                android:layout_marginRight="@dimen/x14"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/y20"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.yingluo.Appraiser.view.home.ViewChoices
                android:id="@+id/choices_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginLeft="@dimen/x14"
                android:layout_marginRight="@dimen/x6"
                android:layout_weight="1" />

            <com.yingluo.Appraiser.view.home.ViewChoices
                android:id="@+id/choices_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginLeft="@dimen/x6"
                android:layout_marginRight="@dimen/x14"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/item_layout_padd" />
    </LinearLayout>

</LinearLayout>