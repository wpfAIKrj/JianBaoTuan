<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/wite"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/float_head"
        style="@style/w_full_h_wrap"
        android:layout_marginTop="10dp"
        android:background="@drawable/home_menu_back" >

        <TextView
            android:id="@+id/title"
            style="@style/w_wrap_h_wrap"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/str_hot_precious"
            android:textColor="@color/black_2"
            android:textSize="15sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:clickable="true"
            android:id="@+id/iv_home_item1_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/test_xc1" />

        <ImageView
            android:clickable="true"
            android:id="@+id/iv_home_item1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:src="@drawable/test_xc1" />

        <ImageView
            android:clickable="true"
            android:id="@+id/iv_home_item1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:src="@drawable/test_xc1" />

        <ImageView
            android:id="@+id/iv_home_item1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:clickable="true"
            android:src="@drawable/test_xc1" />

    </FrameLayout>

</LinearLayout>