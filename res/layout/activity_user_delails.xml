<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/layout_detail_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wite"
            android:orientation="vertical" >

            <include layout="@layout/item_user_delails_1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/test_xc8" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/test_xc8" />

            <include layout="@layout/layout_user_delais_similar_item" />

            <include layout="@layout/layout_user_delais_identify_result" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <EditText
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1.0"
            android:background="@color/wite"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@color/bt_color"
            android:gravity="center"
            android:text="评 论"
            android:textColor="@color/wite"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_goto"
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:background="@color/dialog_title_color"
            android:gravity="center"
            android:text="@string/identiy_by_me"
            android:textColor="@color/wite"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>