<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/layout_detail_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wite"
            android:orientation="vertical" >

            <include layout="@layout/item_delails_user" />

            <LinearLayout 
                android:id="@+id/layout_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                
            </LinearLayout>
    <!--       <com.yingluo.Appraiser.view.ImageViewWithBorder
                android:id="@+id/iv_0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y500"
                android:scaleType="fitXY"
                android:src="@drawable/test_xc8" />

            <com.yingluo.Appraiser.view.ImageViewWithBorder
                android:id="@+id/iv_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y500"
                android:layout_marginTop="@dimen/y20"
                android:scaleType="fitXY"
                android:src="@drawable/test_xc8" />
      --> 

            <include layout="@layout/layout_user_delais_similar_item" />

            <include layout="@layout/layout_user_delais_identify_result"  
                />
            <include layout="@layout/layout_treasure__comment"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal" >

        <EditText
            android:layout_width="0dp"
            android:layout_height="@dimen/y94"
            android:layout_marginLeft="@dimen/x14"
            android:layout_weight="1.0"
            android:background="@color/wite"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="@dimen/x128"
            android:layout_height="@dimen/y94"
            android:layout_marginLeft="@dimen/x10"
            android:background="@color/bt_color"
            android:gravity="center"
            android:text="评 论"
            android:textColor="@color/wite"
            android:textSize="@dimen/x30" />

        <Button
            android:id="@+id/btn_goto"
            android:layout_width="@dimen/x128"
            android:layout_height="@dimen/y94"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x14"
            android:background="@color/dialog_title_color"
            android:gravity="center"
            android:text="@string/identiy_by_me"
            android:textColor="@color/wite"
            android:textSize="@dimen/x30" />
    </LinearLayout>

</LinearLayout>